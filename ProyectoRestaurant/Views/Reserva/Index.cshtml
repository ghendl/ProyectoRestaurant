@model IEnumerable<ProyectoRestaurant.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login_StyleSheet.css">
    <title>Reserva</title>
</head>
<body>

    <div style="display:flex; justify-content:center">
        <div style="width:50%;padding:30px; text-align:center;background-color:#ddaf5f;border-radius:0px 0px 30px 30px">
            <h1 style="font-size: 2.0rem;   font-family: 'Montserrat', sans-serif;">
                <strong>Benvenuto!</strong> Haga su reserva
            </h1>
        </div>
    </div>
    <div style="width:100%;display: flex;
    flex-direction: column;
    align-items: center;margin-top: 3%;">

        <form class="form">
            <div class="field">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                </svg>
                <label for="mesa">Mesa:</label>
                <select id="mesa" name="mesa" required>
                    <option value="mesa1">Mesa 1</option>
                    <option value="mesa2">Mesa 2</option>
                    <option value="mesa3">Mesa 3</option>
            
                </select>
            </div>

            <div class="field">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                </svg>
             
                <label for="dia">Día:</label>
                <input type="date" id="dia" name="dia" required>
            </div>
            
            
            <div class="field">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                </svg>
               
                <label for="hora">Hora:</label>
                <select id="hora" name="hora" required>
                    <option value="12:00">12:00 PM</option>
                    <option value="13:00">1:00 PM</option>
                    <option value="14:00">2:00 PM</option>
              
                </select>
            </div>

            <div class="field">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                </svg>
              
                <label for="personas">Número de Personas:</label>
                <input type="number" id="personas" name="personas" min="1" required>
            </div>

            <div class="btn">
                <button class="button1">Reservar</button>
            </div>

            

           
        </form>
    <</div>
</body>
   

