
@model ProyectoRestaurant.Models.Menu

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Menu_StyleSheet.css">
    <title>Menu</title>
</head>
<div style=" height: 100%;   background: linear-gradient(to right, #FFE0B7, #FFD8A0);">

    <div style="display:flex; justify-content:center;box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;">
        <h1>Eliminar Menú</h1>
    </div>


    <div class="contenedorGeneral">
        <div class="tarjetaMenu" style="flex-direction: column;">
            <h3>Esta seguro que desea eliminar este menú?:</h3>
            <div class="menu-item">
                <div>
                    <h4>Nombre: @Model.Nombre</h4>
                    <h4>Descripcion: @Model.Descripcion</h4>
                    <h4>precio: @Model.Precio</h4>
                </div>
            </div>

            <form asp-action="ConfirmDelete" asp-route-id="@Model.ID" method="post">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Menu" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
    <button class="button" id="volver">
        Volver
    </button>

</div>

<script>
    document.getElementById('volver').addEventListener('click', function () {
        window.location.href = '@Url.Action("Menu", "Home")';
    });

</script>